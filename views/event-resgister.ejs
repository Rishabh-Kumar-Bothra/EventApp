<%- include partials/navigation.ejs %>

<html>
    <head>
        <title>Register</title>
    </head>
    <body>
        <form method="POST" action="/register">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="name" class="form-control" placeholder="Enter Title">
                <small class="form-text text-muted">Choose catchy title</small>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input type="email" name="email" class="form-control" placeholder="Enter Location">
            </div>
            <div class="form-group">
                <label>Description</label>
                <input type="text" name="description" class="form-control" placeholder="Event Details">
                <small class="form-text text-muted">Put appropriate details</small>
            </div>
            <div class="form-group">
                <label>Date</label>
                <input type="date" name="date" class="form-control" placeholder="Date of event">
                <small class="form-text text-muted">Put appropriate details</small>
            </div>
            <div class="form-group">
                <label>Organisation</label>
                <input type="password" name="organisation" class="form-control" placeholder="Name of the Organisation">
            </div>
            <div class="form-group">
                <label>Contact No.</label>
                <input type="number" name="contact" class="form-control" placeholder="Contact information">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </body>

</html>
